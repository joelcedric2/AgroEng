{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "contexts/*": ["./contexts/*"],
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "hooks/*": ["./hooks/*"],
      "lib/*": ["./lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
