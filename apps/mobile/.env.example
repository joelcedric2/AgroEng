# ============================================================================
# Supabase Configuration
# ============================================================================
# Your Supabase project URL (starts with https://)
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Your Supabase anon/public key (starts with eyJ...)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (starts with eyJ...)
# WARNING: Never expose this in client-side code. Only use in server-side functions.
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# Stripe Configuration
# ============================================================================
# Your Stripe publishable key (starts with pk_)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stripe secret key (starts with sk_ or rk_)
# WARNING: Never expose this in client-side code. Only use in server-side functions.
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Webhook secret for verifying Stripe webhook events (starts with whsec_)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ============================================================================
# Expo / EAS Configuration
# ============================================================================
# Your Expo project ID (from app.json or eas.json)
EXPO_PUBLIC_EAS_PROJECT_ID=your_eas_project_id

# App variant: development, staging, or production
EXPO_PUBLIC_APP_VARIANT=development

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable guest mode
EXPO_PUBLIC_ENABLE_GUEST_MODE=true

# Enable/disable subscription features
EXPO_PUBLIC_ENABLE_SUBSCRIPTIONS=true

# Enable/disable offline mode features
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# ============================================================================
# API Configuration
# ============================================================================
# Base URL for your API (if applicable)
EXPO_PUBLIC_API_URL=your_api_url_here

# Any other API keys (prefix with EXPO_PUBLIC_ if needed in client-side code)
# EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================================================
# Environment-specific overrides
# ============================================================================
# Development environment overrides
if [ "$EXPO_PUBLIC_APP_VARIANT" = "development" ]; then
  # Development-specific settings
  EXPO_PUBLIC_DEBUG_MODE=true
  EXPO_PUBLIC_LOG_LEVEL=debug
fi

# Staging environment overrides
if [ "$EXPO_PUBLIC_APP_VARIANT" = "staging" ]; then
  EXPO_PUBLIC_DEBUG_MODE=true
  EXPO_PUBLIC_LOG_LEVEL=info
fi

# Production environment overrides
if [ "$EXPO_PUBLIC_APP_VARIANT" = "production" ]; then
  EXPO_PUBLIC_DEBUG_MODE=false
  EXPO_PUBLIC_LOG_LEVEL=warn
fi
